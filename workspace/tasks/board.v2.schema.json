{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Bitdoze Tasks Board",
  "type": "object",
  "required": ["version", "updated_at", "tasks"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "integer"
    },
    "updated_at": {
      "type": ["string", "null"]
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status", "owner"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "status": {
            "type": "string",
            "enum": ["todo", "in_progress", "blocked", "done"]
          },
          "owner": {
            "type": "string",
            "minLength": 1
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "updated_at": {
            "type": ["string", "null"]
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "blocked_reason": {
            "type": "string",
            "default": ""
          }
        }
      }
    }
  }
}
